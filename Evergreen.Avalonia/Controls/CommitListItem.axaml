<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="*" d:DesignHeight="38"
             x:Class="Evergreen.Avalonia.Controls.CommitListItem"
             xmlns:viewModels="clr-namespace:Evergreen.Avalonia.ViewModels">

    <Design.DataContext>
        <viewModels:CommitListItemViewModel/>
    </Design.DataContext>

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Message}"></TextBlock>
        <TextBlock Text="{Binding Author}"></TextBlock>
        <TextBlock Text="{Binding Sha}"></TextBlock>
        <TextBlock Text="{Binding CommitDate}"></TextBlock>
    </StackPanel>

</UserControl>

